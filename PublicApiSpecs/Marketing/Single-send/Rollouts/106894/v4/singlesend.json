  "servers" : [ {
    "url" : "https://api.hubapi.com"
  } ],
  "tags" : [ {
    "name" : "Single_Send"
  } ],
  "paths" : {
    "/marketing/v4/email/single-send" : {
      "post" : {
        "tags" : [ "Single_Send" ],
        "summary" : "Send an email",
        "description" : "Send a template email to a specific recipient.",
        "operationId" : "post-/marketing/v4/email/single-send",
        "parameters" : [ ],
        "requestBody" : {
          "content" : {
