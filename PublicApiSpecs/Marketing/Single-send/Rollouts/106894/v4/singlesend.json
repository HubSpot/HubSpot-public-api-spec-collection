              "schema" : {
                "$ref" : "#/components/schemas/PublicSingleSendRequestEgg"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "200" : {
            "description" : "successful operation",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/EmailSendStatusView"
                }
              }
            }
          },
          "default" : {
            "description" : "",
            "$ref" : "#/components/responses/Error"
          }
        },
        "security" : [ {
          "oauth2" : [ "marketing-email" ]
        }, {
          "oauth2" : [ "transactional-email" ]
        }, {
          "private_apps" : [ "marketing-email" ]
        }, {
          "private_apps" : [ "transactional-email" ]
        } ],
        "x-hubspot-rate-limit-exemptions" : [ "daily", "ten-secondly" ]
      }
    }
  },
